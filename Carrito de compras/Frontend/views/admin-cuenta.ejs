<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Mi Cuenta</title>
    <link rel="stylesheet" href="/css/admin-cuenta.css">
</head>
<body>
    <div class="admin-header">
        <h1>游녻 Informaci칩n Admin</h1>
        <div class="nav-links">
            <a href="/admin/dashboard">Dashboard</a>
            <a href="/admin/productos">Productos</a>
            <a href="/admin/ventas">Ventas</a>
            <a href="/admin/usuarios">Usuarios</a>
            <a href="/admin/logout">Cerrar Sesi칩n</a>
        </div>
    </div>

    <div class="container">
        <div class="card-container">
            <h2 class="page-title">Informaci칩n del Usuario</h2>
            
            <div class="info-section">
                <label class="info-label">Correo:</label>
                <div class="info-display">
                    <input type="text" id="emailDisplay" readonly value="<%= adminEmail %>">
                </div>
            </div>

            <div class="actions-section">
                <button class="btn-action btn-primary" onclick="openModal('password')">
                    Cambiar Contrase침a
                </button>
                <button class="btn-action btn-primary" onclick="openModal('email')">
                    Cambiar Correo
                </button>
                <button class="btn-action btn-back" onclick="window.location.href='/admin/dashboard'">
                    Regresar
                </button>
                <button class="btn-action btn-warning" onclick="cerrarSesion()">
                    Cerrar Sesi칩n
                </button>
                <button class="btn-action btn-danger" onclick="eliminarCuenta()">
                    Eliminar Cuenta
                </button>
            </div>
        </div>
    </div>

    <!-- Modal Cambiar Contrase침a -->
    <div id="passwordModal" class="modal">
        <div class="modal-content">
            <h2>游 Cambiar Contrase침a</h2>
            <form id="passwordForm">
                <div class="form-group">
                    <label for="currentPassword">Contrase침a Actual</label>
                    <input type="password" id="currentPassword" required>
                </div>
                <div class="form-group">
                    <label for="newPassword">Nueva Contrase침a</label>
                    <input type="password" id="newPassword" required minlength="6">
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirmar Nueva Contrase침a</label>
                    <input type="password" id="confirmPassword" required minlength="6">
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn-submit">Guardar</button>
                    <button type="button" class="btn-cancel" onclick="closeModal('password')">Cancelar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Cambiar Correo -->
    <div id="emailModal" class="modal">
        <div class="modal-content">
            <h2>游닎 Cambiar Correo</h2>
            <form id="emailForm">
                <div class="form-group">
                    <label for="currentEmail">Correo Actual</label>
                    <input type="email" id="currentEmail" value="<%= adminEmail %>" readonly>
                </div>
                <div class="form-group">
                    <label for="newEmail">Nuevo Correo</label>
                    <input type="email" id="newEmail" required>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm">Confirmar con Contrase침a</label>
                    <input type="password" id="passwordConfirm" required>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn-submit">Guardar</button>
                    <button type="button" class="btn-cancel" onclick="closeModal('email')">Cancelar</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/admin-cuenta.js"></script>
</body>
</html>
