<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <div class="topbar">
        <div class="topbar-left">
            <a href="#" class="cart-container" onclick="verificarSesionCarrito(event)">
                <img src="/img/Carritoicono.png" alt="Carrito" class="cart-icon" id="cart-icon">
            </a>
        </div>
        <div class="topbar-center">
            <a href="/principal" class="brand-title">QUESOS BABYBEL</a>
        </div>
        <div class="topbar-right">
            <a href="/login" id="link-login">Iniciar sesión</a>
            <a href="/crearCuenta" id="link-crear">Crear cuenta</a>
            <a href="/usuario" class="user-circle" id="link-usuario" style="display: none;">U</a>
        </div>
    </div>

    <h1><b>Carrito de Compras de Quesos Mini Babybel</b></h1>

    <div class="container-carrito">
        <div class="card carrito-resumen">
            <h2>Resumen del Carrito</h2>

            <!-- Sección de productos con imágenes -->
            <div id="carrito-items-imagenes" class="items-imagenes"></div>

            <div class="carrito-footer">
                <button class="btn-blue" onclick="vaciarCarrito()">Vaciar Carrito</button>
                <div class="total-section">
                    <p class="total-label"><b>Total:</b></p>
                    <p id="total" class="total-amount">$0.00</p>
                </div>
                <a href="#" onclick="procederAlPago(event)" class="btn-green">Proceder al Pago</a>
            </div>
        </div>
    </div>

    <div style="text-align: center; padding: 30px 0; margin-bottom: 20px;">
        <a href="/principal" class="btn-principal">Regresar a la página principal</a>
    </div>

    <script src="/js/sanitize.js"></script>
    <script src="/js/url-guard.js"></script>
    <script src="/js/carrito-utils.js"></script>
    <script src="/js/carrito-page.js"></script>

    <script>
        // Sobrescribir la función actualizarCarrito para mostrar productos con imágenes
        function actualizarCarrito() {
            const carritoItemsImagenes = document.getElementById('carrito-items-imagenes');
            const totalElement = document.getElementById('total');

            if (!carritoItemsImagenes || !totalElement) return;

            carritoItemsImagenes.innerHTML = '';
            let total = 0;

            if (carrito.length === 0) {
                carritoItemsImagenes.innerHTML = '<p style="text-align: center; color: #666; padding: 30px;">Tu carrito está vacío</p>';
            } else {
                carrito.forEach(producto => {
                    // Determinar imagen según nombre del producto
                    let imagenProducto = 'original';
                    if (producto.nombre.toLowerCase().includes('gouda')) {
                        imagenProducto = 'gouda';
                    } else if (producto.nombre.toLowerCase().includes('mozzarella')) {
                        imagenProducto = 'mozzarella';
                    }

                    const precio = parseFloat(producto.precio);
                    const subtotal = precio * producto.cantidad;

                    const productoDiv = document.createElement('div');
                    productoDiv.className = 'carrito-item-imagen';
                    productoDiv.innerHTML = `
                        <img src="/img/babybel-${imagenProducto}.png" 
                             alt="${producto.nombre}" 
                             class="producto-img"
                             onerror="this.src='/img/babybel-original.png'">
                        <div class="producto-info">
                            <p class="producto-nombre">${producto.nombre}</p>
                            <p class="producto-detalle">Cantidad: ${producto.cantidad}</p>
                            <p class="producto-detalle">Precio: $${precio.toFixed(2)}</p>
                            <p class="producto-subtotal">Subtotal: $${subtotal.toFixed(2)}</p>
                        </div>
                    `;
                    carritoItemsImagenes.appendChild(productoDiv);
                    total += subtotal;
                });
            }

            totalElement.textContent = `$${total.toFixed(2)}`;
        }
    </script>

</body>

</html>