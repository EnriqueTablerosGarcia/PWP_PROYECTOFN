<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compra Exitosa</title>
    <link rel="stylesheet" href="/css/confirmacion.css">
</head>

<body>
    <div class="topbar">
        <div class="icon-left">
            <a href="/carrito">
                <img src="/img/Carritodcompras.png" alt="Carrito">
            </a>
        </div>
        <div class="topbar-center">
            <a href="/carrito" class="btn-inicio">Inicio</a>
        </div>
        <a class="user-circle" href="/usuario">U</a>
    </div>

    <div class="container">
        <div class="success-icon">✓</div>
        <h1>¡Compra Exitosa!</h1>
        <p class="mensaje">Gracias por tu compra</p>

        <div class="productos-comprados">
            <h2>Resumen de tu Compra</h2>
            <div id="lista-productos"></div>
        </div>

        <div class="total-compra">
            <h3>Total Pagado: <span id="total-final">$0.00</span></h3>
        </div>

        <div class="botones">
            <a href="/carrito" class="btn-primary">Volver a la página de Compras</a>
            <a href="/login" class="btn-secondary">Cerrar Sesión</a>
        </div>
    </div>

    <script>
        // Obtener datos del carrito desde localStorage
        const carritoComprado = JSON.parse(localStorage.getItem('carritoComprado') || '[]');
        const totalCompra = localStorage.getItem('totalCompra') || '0.00';

        // Mostrar productos
        const listaProductos = document.getElementById('lista-productos');
        const totalFinal = document.getElementById('total-final');

        if (carritoComprado.length > 0) {
            carritoComprado.forEach(item => {
                const productoDiv = document.createElement('div');
                productoDiv.className = 'producto-item';
                productoDiv.innerHTML = `
                    <img src="/img/babybel-${item.nombre.toLowerCase().includes('gouda') ? 'gouda' : item.nombre.toLowerCase().includes('mozzarella') ? 'mozzarella' : 'original'}.png" 
                         alt="${item.nombre}" 
                         onerror="this.src='/img/babybel-original.png'">
                    <div class="producto-info">
                        <h3>${item.nombre}</h3>
                        <p>Cantidad: ${item.cantidad}</p>
                        <p>Precio unitario: $${item.precio.toFixed(2)}</p>
                        <p class="subtotal">Subtotal: $${(item.precio * item.cantidad).toFixed(2)}</p>
                    </div>
                `;
                listaProductos.appendChild(productoDiv);
            });

            totalFinal.textContent = `$${totalCompra}`;

            // Limpiar datos del carrito después de mostrarlos
            setTimeout(() => {
                localStorage.removeItem('carritoComprado');
                localStorage.removeItem('totalCompra');
            }, 1000);
        } else {
            listaProductos.innerHTML = '<p class="no-productos">No hay productos en esta compra</p>';
        }
    </script>
</body>

</html>